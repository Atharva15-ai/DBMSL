Audit_insert.sql:-
create or replace trigger Audit_insert
before delete or insert on Audit_t
begin 
if rtrim (upper(to_char(sysdate,'day')))='WEDNESDAY' then 
raise_application_error ( -200000,'cant delete');
end if;
end;
/
Audit_update.sql:-
create or replace trigger Audit_update
before delete or update on Audit_t
begin 
if rtrim (upper(to_char(sysdate,'day')))='WEDNESDAY' then 
raise_application_error ( -200000,'cant delete');
end if;
end;
/
Insert.sql:-
CREATE OR REPLACE TRIGGER insertmaster
AFTER INSERT ON clientmaster
FOR EACH ROW
BEGIN
    INSERT INTO insertbackup (srno, name)
    VALUES (:NEW.srno, :NEW.name);
END;
/
Update.sql:-
create or replace trigger updatemaster
before update or delete on clientmaster
for each row
BEGIN
insert into Audit_t (srno, name) values (:old.srno, :old.name);
END;
/

